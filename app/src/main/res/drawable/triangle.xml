<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="-60"
            android:pivotX="180%"
            android:pivotY="1%"
            android:toDegrees="45"
            >
            <shape android:shape="rectangle">
                <solid android:color="#e99999"/>
                <stroke
                    android:width="1dp"
                    android:color="#f00" />
            </shape>
        </rotate>
    </item>


</selector>