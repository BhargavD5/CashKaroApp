<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        style="@style/CardViewDefault"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/md_keylines"
        android:layout_marginBottom="@dimen/md_keylines"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginRight="@dimen/md_keylines"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:elevation="@dimen/app_bar_height"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:paddingLeft="@dimen/small_margin"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/amazonsmall" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_favorite_black_24dp" />



            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_share_black_24dp" />


        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_small"
                android:background="@color/divider_color" />


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView2"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/small_margin"
                android:gravity="center"
                android:text="Upto 20% off Mobile Cases  covers on Amezon" />

            <TextView
                android:id="@+id/textView3"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/small_margin"
                android:layout_weight="1"
                android:gravity="center"
                 android:text="+ upto 7.5% extra cashback"
                android:textColor="@color/merchant_action_3" />

            <Button
                android:id="@+id/button_get_offer"
                style="@style/Button.Negative"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/small_margin"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Get Offer" />

            <TextView
                android:id="@+id/textView4"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/small_margin"
                android:gravity="center"
                 android:text="View All Offers (25)"
                android:textColor="@color/button_neutral_background" />
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
